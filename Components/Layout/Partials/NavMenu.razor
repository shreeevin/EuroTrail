@inherits ComponentBase
@inject NavigationManager NavigationManager

@code {
    private string CurrentPage = string.Empty;
    private int allTransactionCount = 0;

    private string? ActiveClass = "flex items-center w-full p-3 leading-tight transition-all rounded-lg outline-none text-start hover:bg-blue-gray-50 hover:bg-gray-800 hover:text-blue-gray-900 focus:bg-blue-gray-50 focus:bg-opacity-80 focus:text-blue-gray-900 active:bg-blue-gray-50 active:bg-opacity-80 active:text-blue-gray-900 bg-gray-800";
    private string? DefaultClass = "flex items-center w-full p-3 leading-tight transition-all rounded-lg outline-none text-start hover:bg-blue-gray-50 hover:bg-gray-800 hover:text-blue-gray-900 focus:bg-blue-gray-50 focus:bg-opacity-80 focus:text-blue-gray-900 active:bg-blue-gray-50 active:bg-opacity-80 active:text-blue-gray-900";

    private bool isLoggedIn;
    private EuroTrail.Models.User? currentUser;

    private void HandelLogout()
    {
        EuroTrail.Services.Session.GetInstance().LogOut();
        NavigationManager.NavigateTo("/login");
    }

    protected override void OnInitialized()
    {
        CurrentPage = GetCurrentPage();
        NavigationManager.LocationChanged += HandleLocationChanged;

        isLoggedIn = EuroTrail.Services.Session.GetInstance().IsLoggedIn();

        if (!isLoggedIn)
        {
            NavigationManager.NavigateTo("/login");
        }

        currentUser = EuroTrail.Services.AuthService.GetCurrentUser();
        this.GetLatestStats();
    }

	private void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        CurrentPage = GetCurrentPage();
		this.GetLatestStats();

        StateHasChanged();
    }

    private string GetCurrentPage()
    {
        var uri = NavigationManager.Uri;
        var path = new Uri(uri).AbsolutePath.TrimStart('/');

        if (path.StartsWith("transactions") || path.StartsWith("transaction-detail") || path.StartsWith("settlement-create") || path.StartsWith("settlement-update"))
        {
            return "transactions"; 
        }
        
        return string.IsNullOrEmpty(path) ? "dashboard" : path;
    }

	public void Dispose()
    {
        NavigationManager.LocationChanged -= HandleLocationChanged;
    }

	private void GetLatestStats()
    {
        int? userId = currentUser?.Id;
        if (userId == null)
        {
            ResetStats();
            return;
        }

        int GetTransactionCount(string type) => EuroTrail.Services.AnalysisService.GetTransactionCount(userId.Value, type);
        allTransactionCount = GetTransactionCount("all_transaction");
    }

    private void ResetStats()
    {
        allTransactionCount = 0;
    }
}
